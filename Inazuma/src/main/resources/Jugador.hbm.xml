<hibernate-mapping>
<class name="com.example.Inazuma.Jugador" table ="Jugador">
<meta attribute="class-description">
Clase que almacena información de jugadores.
</meta>
<id name="idJugador" type="int" column="idJugador">
<generator class="native"/>
</id>
<property name="nombre" column="Nombre" type="string"/>
<property name="posicion" column="Posicion" type="string"/>
  <many-to-one name="equipo"
                     class="com.example.Inazuma.Equipo"
                     column="idEquipo"
                     not-null="false"
                     cascade="none"/>
<!-- Relación muchos a muchos con Tecnica -->
<set name="tecnicas" table="Jugador_Tecnica" cascade="all">
    <key column="idJugador"/>
    <many-to-many class="com.example.Inazuma.Tecnica" column="idTecnica"/>
</set>
</class>
</hibernate-mapping>